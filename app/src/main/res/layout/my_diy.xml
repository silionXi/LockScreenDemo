<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout 
        android:id="@+id/edit_tags_layout_tags"
        android:background="#90000000"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <Button 
            android:id="@+id/edit_tags_save"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:text="@string/save"
            android:layout_alignParentRight="true"/>
        <HorizontalScrollView 
            android:id="@+id/edit_tags_gridview"
            android:background="#90000000"
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/edit_tags_save">
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <GridView
			        android:id="@+id/edit_tags_gridView_res"
			        android:numColumns="5"
			        android:layout_width="400dp"
			        android:layout_height="wrap_content">
		        </GridView>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <View 
        android:id="@+id/edit_tags_spacing"
        android:background="#7f000000"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_above="@id/edit_tags_layout_tags"/>
    <LinearLayout 
        android:orientation="vertical"
        android:id="@+id/edit_tags_layout_res"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/edit_tags_spacing">
        <ImageView 
            android:layout_gravity="bottom|center"
            android:id="@+id/edit_tags_image_header"
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/image_diy_res_touch"/>
        <View 
            android:id="@+id/edit_tags_layout"
            android:background="#7f000000"
            android:layout_width="fill_parent"
            android:layout_height="3dp"/>
        <RelativeLayout 
            android:id="@+id/edit_tags_layout_res_grid"
            android:background="#7f000000"
            android:layout_width="fill_parent"
            android:layout_height="90dp">
            <HorizontalScrollView 
                android:id="@+id/edit_res_gridview"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
	                <GridView
				        android:id="@+id/edit_res_gridView_res"
				        android:numColumns="4"
				        android:layout_width="360dp"
				        android:layout_height="fill_parent">
			        </GridView>
            </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </LinearLayout>
    <View 
        android:id="@+id/edit_tags_layout_touch"
        android:layout_width="fill_parent"
        android:layout_height="3dp"/>
</RelativeLayout>